<!doctype html>
<html lang="en">
  <head>
    <%- include('header'); -%>
  </head>
  <body>
    <!--Navigation Section-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light mainNav">
      <div class="container">
            <a class="navbar-brand font-weight-bold" href="/"><span><img src="images/LW_NoBG.png" id="lwLogo"></span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
              <div class="nav-item js-scroll-trigger ml-auto">
                  <a href="/" class="btn btn-outline-warning font-weight-bold" role="button" id="bookBtn">Back to Homepage</a>
              </div>
            </div>
        </div> 
        </nav>
    <!--End of Navigation Section-->

         <!--Booking Section-->
       <section class="page-section bookNow" id="bookNow">
        <div class="container-fluid bookSect">
              <div class="row bookBox">
                  <div class="col-md-5">
                    <div class="container mapUi d-flex p-1">
                        <img src="images/sample_map.png" alt="esuite_map" id="esuiteMap">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="container bookUi">
                        <div class="row row01 pt-4">
                            <div class="col-sm-6">
                                <h1 class="font-weight-bold">Book Your Seat</h1>
                            </div>
                            <div class="col-sm-6 text-right">
                              <h3 class="clockNow"><span id="localTime"></span></h3>
                              <h3 class="dateNow"><span id="localDay"></span>, <span id="currentDate"></span></h3>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-sm-12">
                             

                              <form class="container" method="post" action="/booknow">
                                <!--Date Picker-->
                                <div class ="form-group">
                                  <input type="date" class="form-control" id="date" tabindex="20" placeholder="Select Your Date" min="2021-01-01" max="2030-12-31" name="createAt">
                                    </div>
                                    <!--End of Date Picker-->
                                    <!--Seat Selection-->
                                <div class ="form-group">
                                  <div class="input-group mb-2">
                                    <div class="input-group-prepend"><!--icon-->
                                      <div class="input-group-text"><i class="fas fa-couch"></i></div>
                                      </div>
                                    <select type="text" class ="form-control" name="seatNo">
                                        <option disabled selected value="">Please select Seat No.</option>
                                        <option value="Seat01">Seat No.1</option>
                                        <option value="Seat02">Seat No.2</option>
                                        <option value="Seat03">Seat No.3</option>
                                        <option value="Seat04">Seat No.4</option>
                                        <option value="Seat05">Seat No.5</option>
                                        <option value="Seat06">Seat No.6</option>
                                        <option value="Seat07">Seat No.7</option>
                                        <option value="Seat08">Seat No.8</option>
                                        <option value="Seat09">Seat No.9</option>
                                        <option value="Seat10">Seat No.10</option>
                                        <option value="Seat11">Seat No.11</option>
                                        <option value="Seat12">Seat No.12</option>
                                    </select>
                                    </div>
                                  </div>
                                 <!--End of Seat Selection-->
                                <!--FullName-->
                                <div class ="form-group">
                                  <div class="input-group mb-2">
                                  <div class="input-group-prepend"><!--icon-->
                                    <div class="input-group-text"><i class="fa fa-user-circle"></i></div>
                                    </div>
                                    <input class ="form-control" id="exampleFormControlInput1" placeholder="FullName" name="fullName">
                                    </div>
                                  </div>
                                   <!--End of Full Name-->
                                   <!--Email-->
                                <div class ="form-group">
                                  <div class="input-group mb-2">
                                    <div class="input-group-prepend"><!--icon-->
                                      <div class="input-group-text"><i class="fa fa-envelope"></i></div>
                                      </div>
                                    <input class ="form-control" id="email" placeholder="name@example.com" name="email">  
                                    </div>
                                  </div>
                                  <!--End of Email-->
                                   <!--Contact Number-->
                                <div class ="form-group">
                                  <div class="input-group mb-2">
                                    <div class="input-group-prepend"><!--icon-->
                                      <div class="input-group-text"><i class="fas fa-phone"></i></div>
                                      </div>
                                    <input class ="form-control"  id="contactNumber" placeholder="Contact Number" name="phoneNo">
                                    </div>
                                  </div>
                                   <!--End of Contact Number-->
                                   
                                     
                                 <!--Submit Button-->
                                 <div class="text-center">
                                <button  id="bookSubmit" class="btn btn-light btn-lg font-weight-bold">Submit</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
              </div>
        </div><!--/container-fluid-->
        </section>
         
        <!-- Moment Javascript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
    <script src="/javascripts/esuite.js" ></script>

    <!-- Bootstrap Date-Picker Plugin -->
    <script src="https://cdn.jsdelivr.net/npm/jtsage-datebox-bootstrap4@5.3.3/jtsage-datebox.min.js"></script>
    

